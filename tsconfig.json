{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "moduleResolution": "node10",
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noUnusedLocals": true                    /* Set the JavaScript language version for emitted JavaScript and include compatible library declarations. */    /* Skip type checking all .d.ts files. */
  },
  "include": ["src"]
}
